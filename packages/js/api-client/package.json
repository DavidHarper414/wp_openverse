{
  "name": "@openverse/api-client",
  "version": "0.0.1-a2",
  "description": "API client for the Openverse REST API",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "type": "module",
  "exports": {
    "import": "./dist/index.mjs",
    "require": "./dist/index.cjs"
  },
  "scripts": {
    "build": "rm -rf dist && mkdir dist && pnpm run build:cjs && pnpm run build:esm && pnpm run build:types && pnpm pack && pnpm publish --dry-run --no-git-checks",
    "build:cjs": "esbuild ./src/**/* --packages=external --sourcemap --format=cjs --out-extension:.js=.cjs --outdir=dist",
    "build:esm": "esbuild ./src/**/* --packages=external --sourcemap --format=esm --out-extension:.js=.mjs --outdir=dist",
    "build:types": "tsc -p ./tsconfig.prod.json",
    "test:unit": "vitest run ./tests",
    "generate": "pnpm run generate:pull && pnpm run generate:format || pnpm run generate:lint",
    "generate:pull": "node ./bin/generate.mjs",
    "generate:format": "pre-commit run prettier --files ./src/generated/openverse.d.ts",
    "generate:lint": "eslint ./src/generated/openverse.d.ts --fix"
  },
  "keywords": [
    "openverse",
    "creative commons"
  ],
  "homepage": "https://docs.openverse.org/packages/js/api_client/index.html",
  "bugs": {
    "url": "https://github.com/WordPress/openverse/issues"
  },
  "author": "Openverse Contributors <openverse@wordpress.org>",
  "repository": {
    "type": "git",
    "url": "https://github.com/WordPress/openverse",
    "directory": "packages/js/openverse-api-client"
  },
  "license": "MIT",
  "devDependencies": {
    "esbuild": "^0.23.1",
    "nock": "14.0.0-beta.11",
    "openapi-typescript": "^7.3.2",
    "typescript": "^5.5.4",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.0.5"
  },
  "dependencies": {
    "openapi-fetch": "^0.11.2"
  }
}
